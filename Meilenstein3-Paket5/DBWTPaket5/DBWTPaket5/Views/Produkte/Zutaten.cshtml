@using DBWTPaket5.Models

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Zutat> meineZutatenListe = Model;
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table>
                <colgroup><col class="width400" /><col class="width160" /><col class="width320" /><col class="width320" /></colgroup>
                <thead>
                    <tr>
                        <th>Zutat</th>
                        <th>Vegan?</th>
                        <th>Vegetarisch?</th>
                        <th>Glutenfrei?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var meineZutat in meineZutatenListe)
                    {
                    @MyHelpers.makeZutatenRow(meineZutat);
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>