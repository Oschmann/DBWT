
@{
    ViewBag.Title = "RegistrierenStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
          
            <form id="log-in" class="form-horizontal" method="post" action="/User/RegistrierenStudent">


                <fieldset>
                    <legend>Registrieren</legend>
                    <div class="form-group">
                        <label for="nutzername">Nutzername:</label>
                        <input type="text" class="form-control" id="nutzername" name="nutzername" required>
                    </div>
                    <div class="form-group">
                        <label for="vorname">Vorname:</label>
                        <input type="text" class="form-control" id="vorname" name="vorname" required>
                    </div>
                    <div class="form-group">
                        <label for="nachname">Nachname:</label>
                        <input type="text" class="form-control" id="nachname" name="nachname" required>
                    </div>
                    <div class="form-group">
                        <label for="matrikelnummer">Matrikelnummer:</label>
                        <input type="number" maxlength="9" min="10000000" class="form-control" id="matrikelnummer" name="matrikelnummer" required>
                    </div>
                    <div class="form-group">
                        <label for="birthdate">Geburtsdatum:</label>
                        <input type="date" class="form-control" id="birthdate" name="birthdate" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control" id="pwd" name="pwd" required>
                    </div>
                    <div class="form-group">
                        <label for="pwdrepeat">Password Wiedeholen:</label>
                        <input type="password" class="form-control" id="pwdrepeat" name="pwdrepeat" required>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="radio">
                                <label><input type="radio" value="INF" name="studiengang">INF</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="radio">
                                <label><input type="radio" value="ET" name="studiengang">ET</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="radio">
                                <label><input type="radio" value="ISE" name="studiengang">ISE</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="radio">
                                <label><input type="radio" value="MCD" name="studiengang">MCD</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="radio">
                                <label><input type="radio" value="WI" name="studiengang">WI</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit">
                        </div>
                    </div>
                </fieldset>


            </form>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>

